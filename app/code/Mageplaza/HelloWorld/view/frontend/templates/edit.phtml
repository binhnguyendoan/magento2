<h2>Edit Post</h2>
<form action="<?php echo $block->getUrl('helloworld/index/save'); ?>" method="post">
    <input type="hidden" name="form_id" value="<?php echo $block->getPost()->getId(); ?>" />

    <label for="data">Data:</label>
    <input type="text" name="data" value="<?php echo $block->escapeHtml($block->getPost()->getData('data')); ?>" required />

    <label for="created">Created:</label>
    <input type="text" name="created" value="<?php echo $block->escapeHtml($block->getPost()->getCreated()); ?>" required />

    <label for="request_status">Request Status:</label>
    <input type="text" name="request_status" value="<?php echo $block->escapeHtml($block->getPost()->getRequestStatus()); ?>" required />

    <button type="submit">Save</button>
    <a href="<?php echo $block->getUrl('helloworld/index/index'); ?>">Cancel</a>
</form>